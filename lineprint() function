import random
import os
import ast

meallist()

meal_choice = str(random.choice(meal_list))
meal_choice_path = str(os.getcwd() + '\\recipe_book\\' + meal_choice + '.txt')

with open(meal_choice_path,"r") as rcGifEWQPI:
    ZiOcMoczPu = rcGifEWQPI.readlines()
ZiOcMoczPu = [NisnKjEEVb.strip() for NisnKjEEVb in ZiOcMoczPu] 

ingredients = ZiOcMoczPu[14]
amounts = ZiOcMoczPu[16]
units = ZiOcMoczPu[18]

ingredients = ast.literal_eval(ingredients)
amounts = ast.literal_eval(amounts)
units = ast.literal_eval(units)

